{
	"name": "webbio-react-tools",
	"displayName": "Webbio React tools",
	"description": "Webbio specific React tools and snippets",
	"icon": "assets/logo.png",
	"publisher": "Webbio",
	"version": "1.0.1",
	"license": "MIT",
	"repository": {
		"url": "https://github.com/MaikaiMa/webbio-react-tools",
		"type": "extension"
	},
	"engines": {
		"vscode": "^1.66.0"
	},
	"categories": [
		"Other",
		"Snippets"
	],
	"main": "./dist/extension.js",
	"activationEvents": [
		"onStartupFinished"
	],
	"contributes": {
		"commands": [
			{
				"command": "react-tools.create-component",
				"title": "Create React component"
			},
			{
				"command": "react-tools.create-styled-component",
				"title": "Create React styled component"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "react-tools.create-styled-component",
					"when": "webbioReactTools.enableStyledComponents || webbioReactTools.enableCssModules"
				}
			],
			"explorer/context": [
				{
					"command": "react-tools.create-component",
					"group": "1_modification",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "react-tools.create-styled-component",
					"group": "1_modification",
					"when": "explorerResourceIsFolder && (webbioReactTools.enableStyledComponents || webbioReactTools.enableCssModules)"
				}
			]
		},
		"snippets": [
			{
				"path": "./snippets/snippets.code-snippets"
			}
		],
		"configuration": {
			"title": "Webbio: React tools",
			"properties": {
				"webbioReactTools.componentFileCase": {
					"type": "string",
					"default": "kebabCase",
					"description": "Prefered case for component file names",
					"enum": [
						"kebabCase",
						"camelCase",
						"pascalCase",
						"snakeCase",
						"pascalSnakeCase",
						"trainCase",
						"dotCase"
					],
					"enumDescriptions": [
						"two-words",
						"twoWords",
						"TwoWords",
						"two_words",
						"Two_Words",
						"Two-Words",
						"two.words"
					]
				},
				"webbioReactTools.enableStyledComponents": {
					"type": "boolean",
					"default": true,
					"description": "Enable styled component options"
				},
				"webbioReactTools.enableCssModules": {
					"type": "boolean",
					"default": true,
					"description": "Enable (S)CSS modules options"
				},
				"webbioReactTools.enableStorybook": {
					"type": "boolean",
					"default": false,
					"description": "Enable story files for Storybook"
				},
				"webbioReactTools.enableJest": {
					"type": "boolean",
					"default": false,
					"description": "Enable test files for Jest"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.66.0",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"ts-loader": "^9.2.8",
		"typescript": "^4.5.5",
		"webpack": "^5.70.0",
		"webpack-cli": "^4.9.2"
	},
	"dependencies": {
		"change-case": "^5.4.4"
	}
}
